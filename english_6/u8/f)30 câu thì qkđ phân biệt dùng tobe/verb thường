        let score = 0;
        const totalQuestions = quizData.length;

        // --- AUDIO SOUNDS ---
        const correctSound = new Audio('https://assets.mixkit.co/sfx/preview/mixkit-correct-answer-tone-2870.mp3');
        // A softer "error" sound to avoid scaring kids
        const wrongSound = new Audio('https://assets.mixkit.co/sfx/preview/mixkit-wrong-answer-bass-buzzer-948.mp3'); 

        // --- RENDER LOGIC ---
        function renderQuiz() {
            const container = document.getElementById('quiz-container');
            
            quizData.forEach((q, index) => {
                // Parse the rationale from the input to create structured parts
                // The input rationale usually comes as "Ch√≠nh x√°c! ... \n‚Ä¢ D·ªãch: ..."
                // We split it to format nicely.
                let rawExp = q.explanationText;
                let translation = "";
                let reasoning = "";

                if(rawExp.includes("‚Ä¢ D·ªãch:")) {
                    const parts = rawExp.split("‚Ä¢ D·ªãch:");
                    reasoning = parts[0].replace("Ch√≠nh x√°c!", "").trim();
                    translation = parts[1].trim();
                } else {
                    reasoning = rawExp;
                    translation = "D·ªãch c√¢u h·ªèi ·ªü tr√™n.";
                }

                const card = document.createElement('div');
                card.className = 'card';
                card.id = `q-${index}`;

                let optionsHtml = '';
                q.options.forEach((opt, i) => {
                    optionsHtml += `
                        <button class="option-btn" onclick="checkAnswer(this, ${index}, ${opt.isCorrect})">
                            ${String.fromCharCode(65 + i)}. ${opt.text}
                        </button>
                    `;
                });

                // Prepare explanation HTML
                let optionsAnalysis = '<ul style="margin: 0; padding-left: 20px; color: #555;">';
                q.options.forEach((opt, i) => {
                    optionsAnalysis += `<li><b>${String.fromCharCode(65 + i)}. ${opt.text}</b>: ${opt.meaning}</li>`;
                });
                optionsAnalysis += '</ul>';

                card.innerHTML = `
                    <div class="question-number">C√¢u ${q.questionNumber}</div>
                    <div class="question-text">${q.question}</div>
                    <span class="question-hint">üí° G·ª£i √Ω: ${q.hint}</span>
                    <div class="options-grid">
                        ${optionsHtml}
                    </div>
                    
                    <div class="explanation-box" id="exp-${index}">
                        <span class="exp-title">üë©‚Äçüè´ Ms Mai An gi·∫£i th√≠ch:</span>
                        <div class="exp-content">
                            <p><span class="exp-label">1. D·ªãch c√¢u h·ªèi:</span> "${translation}"</p>
                            <p><span class="exp-label">2. Ph√¢n t√≠ch ƒë√°p √°n:</span></p>
                            ${optionsAnalysis}
                            <p><span class="exp-label">3. T·∫°i sao ch·ªçn ƒë√°p √°n ƒë√∫ng?</span></p>
                            <p>${reasoning}</p>
                        </div>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        // --- INTERACTION LOGIC ---
        function checkAnswer(btn, qIndex, isCorrect) {
            const card = document.getElementById(`q-${qIndex}`);
            const buttons = card.querySelectorAll('.option-btn');
            const expBox = document.getElementById(`exp-${qIndex}`);

            // Prevent multiple clicks
            if (card.getAttribute('data-answered') === 'true') return;
            card.setAttribute('data-answered', 'true');

            // Disable all buttons in this card
            buttons.forEach(b => b.disabled = true);

            if (isCorrect) {
                // UI
                btn.classList.add('correct');
                score++;
                
                // Sound
                correctSound.currentTime = 0;
                correctSound.play().catch(e => console.log("Audio play failed interaction required"));
                
                // Confetti Effect
                confetti({
                    particleCount: 100,
                    spread: 70,
                    origin: { y: 0.6 },
                    colors: ['#00C9A7', '#8854C0', '#F39C12']
                });

            } else {
                // UI
                btn.classList.add('wrong');
                
                // Highlight correct answer
                const correctBtn = Array.from(buttons).find(b => 
                    quizData[qIndex].options.find(opt => opt.text === b.innerText.split('. ')[1]).isCorrect
                );
                if(correctBtn) correctBtn.classList.add('correct');

                // Sound & Shake
                wrongSound.currentTime = 0;
                wrongSound.play().catch(e => console.log("Audio play failed"));
            }

            // Show Explanation immediately
            expBox.classList.add('visible');
        }

        // --- FINISH & SCORE ---
        function finishQuiz() {
            // Check if all questions answered (Optional, but good for UX)
            // Here we just show the score regardless
            
            const modal = document.getElementById('result-modal');
            const scoreDisplay = document.getElementById('score-display');
            const title = document.getElementById('result-title');
            const msg = document.getElementById('result-message');

            scoreDisplay.textContent = `${score}/${totalQuestions}`;
            modal.style.display = 'flex';

            // Custom messages based on score
            const percentage = (score / totalQuestions) * 100;
            if (percentage === 100) {
                title.textContent = "XU·∫§T S·∫ÆC! üèÜ";
                msg.textContent = "Em ƒë√£ n·∫Øm v·ªØng to√†n b·ªô ki·∫øn th·ª©c!";
                confetti({ particleCount: 200, spread: 100, origin: { y: 0.5 } });
            } else if (percentage >= 80) {
                title.textContent = "GI·ªéI QU√Å! üåü";
                msg.textContent = "Em l√†m b√†i r·∫•t t·ªët, ch·ªâ sai m·ªôt ch√∫t th√¥i.";
            } else if (percentage >= 50) {
                title.textContent = "C·ªê L√äN NH√â! üí™";
